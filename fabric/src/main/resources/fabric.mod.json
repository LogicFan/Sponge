{
  "schemaVersion": 1,
  "id": "spongefabric",
  "version": "${version}",

  "name": "Sponge Fabric",
  "description": "The SpongeAPI implementation for FabricMC.",
  "authors": [
    "Yongda Fan",
    "Tingda Du"
  ],
  "contact": {
    "homepage": "https://github.com/LogicFan/Sponge",
    "sources": "https://github.com/LogicFan/Sponge"
  },

  "license": "MIT",
  "icon": "assets/spongefabric/icon.png",

  "environment": "*",
  "entrypoints": {
    "preLaunch": ["org.spongepowered.fabric.ModMain"],
    "main":      ["org.spongepowered.fabric.ModMain"],
    "client":    ["org.spongepowered.fabric.ModMain"],
    "server":    ["org.spongepowered.fabric.ModMain"]
  },
  "mixins": ["${mixinConfigs}"],

  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": "1.16.x"
  },
  "suggests": {
    "another-mod": "*"
  }
}
